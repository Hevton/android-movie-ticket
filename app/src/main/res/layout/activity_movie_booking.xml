<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.moviebookingactivity.MovieBookingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_booking_poster"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />


            <TextView
                android:id="@+id/tv_booking_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="27dp"
                android:includeFontPadding="false"
                android:textColor="@color/woowa_black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_booking_poster"
                tools:text="해리 포터와 마법사의 돌" />

            <TextView
                android:id="@+id/tv_booking_screening_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:includeFontPadding="false"
                android:textColor="@color/woowa_black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_booking_movie_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_booking_movie_name"
                tools:text="상영일: 2024.3.1" />

            <TextView
                android:id="@+id/tv_booking_running_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/woowa_black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_booking_movie_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_booking_screening_day"
                tools:text="러닝타임: 152분" />

            <TextView
                android:id="@+id/tv_booking_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="20dp"
                android:includeFontPadding="false"
                android:textColor="@color/woowa_black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_booking_running_time"
                tools:text="설명입니다  알랄라쌀랄라 알랄라쌀랄라 알랄라쌀랄라 알랄라쌀랄라 알랄라쌀랄라 알랄라쌀랄라 알랄라쌀랄라 알랄라쌀랄라 알랄라쌀랄라 알랄라쌀랄라 알랄라쌀랄라"
                app:layout_constraintHorizontal_bias="0.512" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner_time"
            app:layout_constraintTop_toTopOf="@id/layout_input" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spinner_date"
            app:layout_constraintTop_toTopOf="@id/spinner_date" />

        <TextView
            android:id="@+id/tv_ticket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/woowa_black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_ticket_minus"
            app:layout_constraintEnd_toStartOf="@+id/btn_ticket_plus"
            app:layout_constraintStart_toEndOf="@+id/btn_ticket_minus"
            app:layout_constraintTop_toTopOf="@+id/btn_ticket_minus"
            tools:text="1" />

        <Button
            android:id="@+id/btn_ticket_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/shape_button"
            android:includeFontPadding="false"
            android:text="@string/btn_ticket_minus"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btn_booking_complete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_date" />

        <Button
            android:id="@+id/btn_ticket_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_button"
            android:includeFontPadding="false"
            android:text="@string/btn_ticket_plus"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_ticket_minus" />

        <Button
            android:id="@+id/btn_booking_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button"
            android:text="@string/btn_booking_complete"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
